---
import { type CollectionEntry } from "astro:content";
import { Image } from "astro:assets";

type Props = {
  post: CollectionEntry<"posts">;
};

const { post } = Astro.props;
---

<article>
  <a href={`/blog/${post.slug}`}>
    <Image
      src={post.data.image}
      width={600}
      height={600 / 1.5}
      alt={post.data.title}
      class="rounded-2xl shadow-xl mb-4 aspect-thumbnail object-cover"
    />
  </a>
  <a href={`/blog/${post.slug}`} class="text-2xl text-zinc-900 uppercase font-bold text-justify inline-block">
    <h2>{post.data.title}</h2>
  </a><br><br>
  <p class="text-zinc-800 text-xl text-justify line-clamp-2">{post.body}</p>
</article>
